<script>
    $(document).ready(function () {
        $("#mainArea").parent().removeClass("container");
        $("#mainArea").parent().removeClass("body-content");
        var model = @Html.Raw(Json.Encode(Model));
        var requestUrl = '@Url.Action("Explore", "GolfCourses")';
        var courseGalleryVm = new courseGalleryViewModel(model, requestUrl);

        ko.applyBindings(courseGalleryVm);
    });
</script>
