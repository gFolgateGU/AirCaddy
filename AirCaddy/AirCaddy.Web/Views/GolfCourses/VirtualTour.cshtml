@model AirCaddy.Domain.ViewModels.GolfCourses.VirtualTourViewModel

@{
    ViewBag.Title = "VirtualTour";
}

<link href="~/Content/GolfCourses/golfcourses.virtualtour.css" rel="stylesheet" />
<link href="~/Content/w3_customs.css" rel="stylesheet">

<meta name="viewport" content="width=device-width, initial-scale=1">

<div id="modalSection">
    @Html.Partial("VirtualTourModals")
</div>

<div class="w3-gray w3-sidebar w3-bar-block w3-card w3-animate-left" style="display:none" id="mySidebar">
    <button class="w3-bar-item w3-button w3-large"
            data-bind="click: hideSideBar">
        Close &times;
    </button>
    <a href="#" class="w3-bar-item w3-button">Hole 1</a>
    <a href="#" class="w3-bar-item w3-button">Hole 2</a>
    <a href="#" class="w3-bar-item w3-button">Hole 3</a>
    <a href="#" class="w3-bar-item w3-button">Hole 4</a>
    <a href="#" class="w3-bar-item w3-button">Hole 5</a>
    <a href="#" class="w3-bar-item w3-button">Hole 6</a>
    <a href="#" class="w3-bar-item w3-button">Hole 7</a>
    <a href="#" class="w3-bar-item w3-button">Hole 8</a>
    <a href="#" class="w3-bar-item w3-button">Hole 9</a>
</div>


<div id="main">
    <div class="w3-round w3-black">
        <button id="openNav" class="w3-button w3-black w3-xlarge" data-bind="click: showSideBar">&#9776;</button>
        <div class="w3-container">
            <h2>
                <button data-bind="click: showRatingPopUp">sup</button>
                <font color="white">Elk Valley Golf Course - Hole 17</font>
            </h2>
        </div>
    </div>

    <br />  

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <div data-bind="visible: footageAvailableVisible">
                <iframe max-width="560px" width="100%" height="320" src="https://www.youtube.com/embed/_ulDpOPQFlQ" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>    
            </div>
            <div data-bind="visible: footageUnavailableVisible">
                <div class="no-footage-ele">
                    <div class="text-center" style="padding-top: 10%;">
                        <h2 class="no-footage-ele-inside-content">No footage available.</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container col-xs-12">
        <button class="accordion"><strong><span></span></strong>&nbsp;&nbsp;&nbsp;Rating - (<span></span> / 5)</button>
        <div class="container panel col-xs-12">
            <div class="row panel-cover">
                <div class="col-xs-1">
                </div>
            </div>
        </div>

        <h3>Comments:</h3>
        <input id="ex1" data-slider-id='ex1Slider' type="text" data-slider-min="0" data-slider-max="20" data-slider-step="1" data-slider-value="14" />
        <div class="row">
            <div class="col-sm-9">
                <div class="well">
                    <p><strong>John</strong></p>
                    <p>Nice course. Very friendly and forgiving greens.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-9">
                <div class="well">
                    <p><strong>Bo</strong></p>
                    <p>Fairways are pretty straight forward and match with the video footage.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-9">
                <div class="well">
                    <p><strong>Jane</strong></p>
                    <p>Fun course to play on.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-9">
                <div class="well">
                    <p><strong>Anja</strong></p>
                    <p>Love it here!</p>
                </div>
            </div>
        </div>
    </div>

    <label>
        Comment: <br> <br> <textarea></textarea>
        <input class="btn btn-lg btn-success" type="submit" name="Submit" />
    </label>
</div>

<script src="~/Scripts/bootstrap-slider.min.js"></script>
<script src="~/Scripts/App/GolfCourses/golfcourses.virtualtour.viewmodel.js"></script>
<script>
    $(document).ready(function() {
        var model = @Html.Raw(Json.Encode(Model));
        console.log(model);
        var viewModel = new virtualTourViewModel(model);
        ko.applyBindings(viewModel);
    });
</script>